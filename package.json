{
  "name": "@jjwesterkamp/event-delegation",
  "version": "0.4.4",
  "author": "Jeffrey Westerkamp",
  "repository": "git+https://github.com/JJWesterkamp/event-delegation.git",
  "description": "Event delegation for browser DOM events. Flexible, cross-browser compatible and Type-focused.",
  "keywords": [
    "DOM",
    "Events",
    "Delegation",
    "Event delegation",
    "Typescript"
  ],
  "license": "MIT",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./event-delegation.d.ts",
  "scripts": {
    "dev": "run-p \"build:** -- --watch\"",
    "build": "run-p build:**",
    "build:cjs": "tsc",
    "build:esm": "tsc -m es6 --outDir esm",
    "build:umd": "webpack",
    "build:declaration": "dts-bundle-generator -o event-delegation.d.ts src/index.ts --umd-module-name EventDelegation --no-banner",
    "build:docs": "typedoc src/*",
    "prepublishOnly": "git checkout master && npm-run-all test build",
    "test": "jest",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/jsdom": "^16.2.5",
    "@types/webpack-env": "^1.15.3",
    "coveralls": "^3.1.0",
    "dts-bundle-generator": "^5.5.0",
    "jest": "^26.6.3",
    "jsdom": "^16.4.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "tslib": "^2.0.0",
    "typedoc": "^0.20.34",
    "typescript": "^4.0.5",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0"
  }
}
